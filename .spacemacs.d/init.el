;; Used in the agenda view to filter out certain tags
(defun my-skip-tag(tag)
  "Skip entries that are tagged TAG"
  (let* ((entry-tags (org-get-tags-at (point))))
    (if (member tag entry-tags)
        (progn (outline-next-heading) (point))
      nil)))

